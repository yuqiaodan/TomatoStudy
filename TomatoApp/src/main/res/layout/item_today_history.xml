<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_main_blue"
    android:padding="5dp"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    >
    <TextView
        android:id="@+id/tv_history_years"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="1876"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/pink"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:padding="10dp"
            android:id="@+id/tv_today_history_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="1876年3月25日"
            android:background="@color/powderblue"
            />
        <TextView
            android:padding="10dp"
            android:id="@+id/tv_today_history_title"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北洋政府颁布第一个废除文言文、采用国语的法令"
            android:background="@color/thistle"

            />

    </LinearLayout>


</LinearLayout>