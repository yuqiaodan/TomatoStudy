<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/view_chat_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/robot_icon"
            />
        <TextView
            android:id="@+id/tv_chatLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="你好你好啊你好啊你好啊啊"
            android:padding="7dp"
            android:layout_marginRight="130dp"
            android:background="@drawable/shape_round_chat_left"
            />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/view_chat_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        >
        <TextView
            android:id="@+id/tv_chatRight"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啊你好啊啊"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:padding="7dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/shape_round_chat_right"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/portrait_icon"
            />
    </LinearLayout>
</LinearLayout>