<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/lightcyan"
    android:orientation="vertical"
    tools:context="swust.yuqiaodan.tomatoapp.mvp.ui.activity.JokeActivity">

    <include
        android:id="@+id/joke_title"
        layout="@layout/include_title" />

    <com.vondear.rxui.view.cardstack.RxCardStackView
        android:id="@+id/stackview_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:id="@+id/button_turn_the_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <Button
            style="@style/CardJokeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onPreClick"
            android:text="上一张" />

        <Button
            style="@style/CardJokeButton"
            android:id="@+id/btn_next_group_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="换一组" />

        <Button
            style="@style/CardJokeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onNextClick"
            android:text="下一张" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/button_change_joke_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <Button
            android:id="@+id/btn_text_joke"
            style="@style/CardJokeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="文字笑话" />

        <Button
            android:id="@+id/btn_next_group_1"
            style="@style/CardJokeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="换一组" />

        <Button
            android:id="@+id/btn_pic_joke"
            style="@style/CardJokeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="图片笑话" />
    </LinearLayout>

</LinearLayout>
